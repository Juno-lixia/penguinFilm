{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "$component/*": ["./src/component/*"],
      "$views/*": ["./src/views/*"],
      "$utils/*": ["./src/utils/*"],
      "$config/*": ["./src/config/*"],
      "$plugins/*": ["./src/plugins/*"],
      "$gadget/*": ["./src/gadget/*"]
    }
  }
}